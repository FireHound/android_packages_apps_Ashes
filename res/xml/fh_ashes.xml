<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lineage="http://schemas.android.com/apk/res/lineageos.platform"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/ashes_title" >

    <!-- Status Bar -->
    <Preference
        android:key="fh_statusbar_category"
        android:title="@string/status_bar_title"
        android:fragment="com.fh.settings.fragments.statusbar.StatusBarSettings" 
        android:icon="@drawable/ic_ashes_statusbar" />

    <!-- Quick Settings -->
    <Preference
        android:key="fh_qs_category"
        android:title="@string/qs_title"
        android:fragment="com.fh.settings.fragments.qs.QuickSettings" 
        android:icon="@drawable/ic_ashes_qs" />

    <!-- Notifications -->
    <Preference
        android:key="fh_notifications_category"
        android:title="@string/notification_title"
        android:fragment="com.fh.settings.fragments.notifications.FhNotificationsSettings" 
        android:icon="@drawable/ic_ashes_notifications" />

    <!-- Lockscreen -->
    <Preference
        android:key="fh_lockscreen_category"
        android:title="@string/lockscreen_title"
        android:fragment="com.fh.settings.fragments.lockscreen.LockScreenSettings" 
        android:icon="@drawable/ic_ashes_lockscreen" />

    <!-- Recents -->
    <Preference
        android:key="fh_recents_category"
        android:title="@string/recents_settings"
        android:fragment="com.fh.settings.fragments.recents.RecentsSettings" 
        android:icon="@drawable/ic_ashes_recents" />

    <!-- Hardware buttons -->
    <Preference
        android:key="fh_buttons_category"
        android:title="@string/button_title"
        android:fragment="com.fh.settings.fragments.hwbutton.ButtonSettings" 
        android:icon="@drawable/ic_ashes_buttons" />

    <!-- Navigation Bar -->
    <org.lineageos.internal.lineageparts.LineagePartsPreference
        android:key="button_settings"
        android:title="@string/navbar_title" 
        android:icon="@drawable/ic_ashes_navbar" />

    <!-- UI / UX -->
    <Preference
        android:key="fh_ui_category"
        android:title="@string/display_title"
        android:fragment="com.fh.settings.fragments.ui.DisplaySettings" 
        android:icon="@drawable/ic_ashes_ui" />

    <!-- Sounds -->
    <Preference
        android:key="fh_sounds_category"
        android:title="@string/sound_title"
        android:fragment="com.fh.settings.fragments.sound.FhSoundSettings" 
        android:icon="@drawable/ic_ashes_sounds" />

    <!-- Animations -->
    <Preference
        android:key="fh_animations_category"
        android:title="@string/animation_settings"
        android:fragment="com.fh.settings.fragments.animation.AnimationSettings" 
        android:icon="@drawable/ic_ashes_animations" />

    <!-- Gestures -->
    <Preference
        android:key="fh_gestures_category"
        android:title="@string/fh_gestures"
        android:fragment="com.fh.settings.fragments.gestures.FhGestures" 
        android:icon="@drawable/ic_ashes_gestures" />

    <!-- Misc Settings -->
    <Preference
        android:key="fh_misc_category"
        android:title="@string/misc_title"
        android:fragment="com.fh.settings.fragments.misc.MiscSettings" 
        android:icon="@drawable/ic_ashes_misc" />

</PreferenceScreen>
