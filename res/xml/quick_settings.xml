<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
                  android:title="@string/qs_title">

    <PreferenceCategory
        android:key="quick_settings_category"
        android:title="@string/qs_panel_alpha_title">

        <!-- QS Panel opacity -->
        <com.fh.settings.preferences.CustomSeekBarPreference
            android:key="qs_panel_alpha"
            android:title="@string/qs_panel_alpha_title"
            android:summary="@string/qs_panel_alpha_summary"
            android:max="100"
            settings:min="0"
            android:persistent="false" />

        <!-- Battery in QS Header -->
        <com.fh.settings.preferences.SecureSettingSwitchPreference
            android:key="qs_battery_location_bar"
            android:title="@string/qs_battery_location_bar"
            android:summary="@string/qs_battery_location_bar_summary"
            android:defaultValue="false" />

        <!-- battery_percentage_title -->
        <com.fh.settings.preferences.SystemSettingListPreference
            android:key="qs_battery_mode"
            android:title="@string/battery_percentage_title"
            android:entries="@array/qs_battery_mode_entries"
            android:entryValues="@array/qs_battery_mode_values"
            android:defaultValue="1" />


    </PreferenceCategory>

    <PreferenceCategory
        android:key="qs_tiles"
        android:title="@string/tiles_title" >

        <!-- QS Tiles title -->
        <com.fh.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_tile_title_visibility"
            android:title="@string/qs_tile_title_visibility_title"
            android:summary="@string/qs_tile_title_visibility_summary"
            android:defaultValue="true" />

        <!-- Vibrate tiles -->
        <com.fh.settings.preferences.SecureSettingSwitchPreference
            android:key="quick_settings_vibrate"
            android:title="@string/quick_settings_vibrate_title"
            android:summary="@string/quick_settings_vibrate_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
